{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Connections": {
    "Database": {
      "ConnectionType": "MsSql",
      "ConnectionString": "Data Source=:memory:;Mode=Memory;Cache=Shared",
      "CommandTimeout": 30,
      "EnableRetry": true,
      "MaxRetryAttempts": 3
    },
    "Analytics": {
      "ConnectionType": "MsSql",
      "ConnectionString": "Data Source=analytics.db",
      "ReadOnly": true
    }
  },

  "Authentication": {
    "Default": {
      "AuthenticationType": "AzureEntra",
      "TenantId": "common",
      "ClientId": "demo-client-id",
      "Authority": "https://login.microsoftonline.com/common"
    }
  },

  "SecretManagement": {
    "Default": {
      "SecretManagementType": "AzureKeyVault",
      "VaultUrl": "https://demo-vault.vault.azure.net/",
      "EnableCaching": true
    }
  },

  "DataGateways": {
    "Primary": {
      "DataGatewayType": "Sql",
      "ConnectionName": "Database",
      "EnableBulkOperations": true
    }
  },

  "Transformations": {
    "Default": {
      "TransformationType": "Standard",
      "EnableValidation": true,
      "MaxConcurrency": 4
    }
  }
}
