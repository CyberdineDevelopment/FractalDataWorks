{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "RoslynMcpServer": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/roslyn-mcp-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithProcessId", 
      "WithThreadId",
      "WithMachineName"
    ]
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317"
  },
  "CodeFix": {
    "DefaultStringComparison": {
      "CaseSensitive": "StringComparison.Ordinal",
      "CaseInsensitive": "StringComparison.OrdinalIgnoreCase"
    },
    "RegexTimeouts": {
      "DefaultTimeoutMs": 1000,
      "MaxTimeoutMs": 5000,
      "EnableTimeoutValidation": true
    },
    "NullDefense": {
      "DetectRedundantArgumentNullChecks": true,
      "DetectRedundantNullForgivingOperators": true,
      "SuggestNullableAnnotations": true
    },
    "EnableRedundantNullDefenseDetection": true
  }
}