<Project>
  <!-- Enable the analyzer to run during builds -->
  <PropertyGroup>
    <EnableFractalDataWorksCollectionsSourceGenerators Condition="'$(EnableFractalDataWorksCollectionsSourceGenerators)' == ''">true</EnableFractalDataWorksCollectionsSourceGenerators>
  </PropertyGroup>

  <ItemGroup Condition="'$(EnableFractalDataWorksCollectionsSourceGenerators)' == 'true'">
    <Analyzer Include="$(MSBuildThisFileDirectory)../analyzers/dotnet/cs/FractalDataWorks.Collections.SourceGenerators.dll" />
  </ItemGroup>
</Project>