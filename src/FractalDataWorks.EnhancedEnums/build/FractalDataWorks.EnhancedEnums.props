<?xml version="1.0" encoding="utf-8"?>
<Project>
  <!-- 
    This props file converts the IncludeInEnhancedEnumAssemblies MSBuild property
    into an AssemblyMetadataAttribute so the Enhanced Enums generator can read it.
    
    Usage in consuming projects:
    <PropertyGroup>
      <IncludeInEnhancedEnumAssemblies>Main;Services;OtherAssembly</IncludeInEnhancedEnumAssemblies>
    </PropertyGroup>
  -->
  
  <ItemGroup Condition="'$(IncludeInEnhancedEnumAssemblies)' != ''">
    <AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
      <_Parameter1>IncludeInEnhancedEnumAssemblies</_Parameter1>
      <_Parameter2>$(IncludeInEnhancedEnumAssemblies)</_Parameter2>
    </AssemblyAttribute>
  </ItemGroup>
  
  <!-- Conditional support for emitting generated files to disk when EmitGeneratorFiles is true -->
  <PropertyGroup Condition="'$(EmitGeneratorFiles)' == 'true'">
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath Condition="'$(CompilerGeneratedFilesOutputPath)' == ''">GeneratedFiles</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>
  
  <!-- Exclude generated files from compilation to prevent double compilation -->
  <ItemGroup Condition="'$(EmitGeneratorFiles)' == 'true'">
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
  </ItemGroup>
  
  <!-- Clean generated files before build -->
  <Target Name="CleanGeneratedFiles" BeforeTargets="BeforeBuild" Condition="'$(EmitGeneratorFiles)' == 'true'">
    <RemoveDir Directories="$(CompilerGeneratedFilesOutputPath)" Condition="Exists('$(CompilerGeneratedFilesOutputPath)')" />
  </Target>
</Project>