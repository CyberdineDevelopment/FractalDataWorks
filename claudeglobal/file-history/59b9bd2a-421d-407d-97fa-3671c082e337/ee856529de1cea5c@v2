using FractalDataWorks.Collections.Attributes;
using FractalDataWorks.Services.Authentication.Abstractions;

namespace FractalDataWorks.Services.Authentication;

/// <summary>
/// OAuth 2.0 Refresh Token type.
/// </summary>
[TypeOption(typeof(TokenTypes), "RefreshToken")]
public sealed class RefreshToken : TokenTypeBase
{
    /// <summary>
    /// Initializes a new instance of the <see cref="RefreshToken"/> class.
    /// </summary>
    public RefreshToken() : base(
        id: 3,
        name: "RefreshToken",
        format: "Opaque",
        canBeRefreshed: true,
        containsUserIdentity: false,
        typicalLifetimeSeconds: 2592000) // 30 days
    {
    }
}
