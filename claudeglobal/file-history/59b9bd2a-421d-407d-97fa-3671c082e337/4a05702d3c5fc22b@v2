<?xml version="1.0" encoding="utf-8"?>
<Project>
  <!-- This props file ensures that projects using the EnhancedEnums source generator
       have access to the base types (EnumCollectionBase, EnumOptionBase, etc.)
       that are packed inside the analyzer DLL. -->

  <ItemGroup>
    <!-- Add reference to the analyzer DLL which contains the internalized EnhancedEnums types -->
    <Reference Include="FractalDataWorks.EnhancedEnums">
      <HintPath>$(MSBuildThisFileDirectory)..\analyzers\dotnet\cs\FractalDataWorks.EnhancedEnums.SourceGenerators.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>
</Project>
