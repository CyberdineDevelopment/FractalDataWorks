<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <GeneratePkgDefFile>true</GeneratePkgDefFile>
    <UseCodebase>true</UseCodebase>
    <PackageId>FractalDataWorks.Templates.Extension</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Authors>FractalDataWorks</Authors>
    <Company>FractalDataWorks</Company>
    <Description>Visual Studio Extension for FractalDataWorks project templates and solution wizard</Description>
    <Copyright>Copyright Â© FractalDataWorks 2025</Copyright>
    <VsixType>v3</VsixType>
    <StartAction>Program</StartAction>
    <StartProgram Condition="'$(DevEnvDir)' != ''">$(DevEnvDir)devenv.exe</StartProgram>
    <StartArguments>/rootsuffix Exp</StartArguments>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.SDK" Version="17.8.37221" />
    <PackageReference Include="Microsoft.VSSDK.BuildTools" Version="17.8.2115" />
    <PackageReference Include="EnvDTE" Version="17.8.37221" />
    <PackageReference Include="EnvDTE80" Version="17.8.37221" />
    <PackageReference Include="Microsoft.VisualStudio.Shell.Framework" Version="17.8.37221" />
    <PackageReference Include="Microsoft.VisualStudio.Shell.Interop" Version="17.8.37221" />
    <PackageReference Include="Microsoft.VisualStudio.Shell.Interop.8.0" Version="17.8.37221" />
    <PackageReference Include="Microsoft.VisualStudio.TemplateWizardInterface" Version="17.8.37221" />
    <PackageReference Include="Microsoft.VisualStudio.Threading" Version="17.8.14" />
    <PackageReference Include="System.ComponentModel.Composition" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Design" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup>
    <VSIXSourceItem Include="**\*.vstemplate" />
    <VSIXSourceItem Include="**\*.vsix" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="bin\**" />
    <Compile Remove="obj\**" />
    <EmbeddedResource Remove="bin\**" />
    <EmbeddedResource Remove="obj\**" />
    <None Remove="bin\**" />
    <None Remove="obj\**" />
    <VSIXSourceItem Remove="bin\**" />
    <VSIXSourceItem Remove="obj\**" />
  </ItemGroup>

</Project>